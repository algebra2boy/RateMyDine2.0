{
    "compilerOptions": {
      "target": "es2022", 
      "module": "es2022",                               
      "rootDir": "./src",                  
      "moduleResolution": "node",    
      "allowJs": true, 
      "outDir": "./dist",                                 
      "esModuleInterop": true,                            
      "forceConsistentCasingInFileNames": true,         
      "strict": true,                                    
      "noUnusedLocals": true,                             
      "noUnusedParameters": true,                         
      "skipLibCheck": true                                
    },
    "ts-node": {
      "esm": true,
    },
  }
  